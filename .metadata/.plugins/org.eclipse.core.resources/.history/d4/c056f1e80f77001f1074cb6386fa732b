package area;

public class InsertionSort {
	
	 private String stno;
	    private String stationname;
	    private double temperature;
	    private String color;
	    private double ph;
	    private double chloride;
	    private double flouride;

	public static Area[] sortByStationname(Area[] area) {
		for (int i = 1; i < area.length; i++) {
			int j = i;
			while (j > 0 && area[j - 1].getStationname().compareTo(area[i].getStationname()) > 0) {
				area[j] = area[j - 1];
				j--;
			}
			area[j] = area[i];
		}
		return area;
	}
	
	
	public static Area[] sortByStno(Area[] area) {
		for (int i = 1; i < area.length; i++) {
			int j = i;
			while (j > 0 && area[j - 1].getStno().compareTo(area[i].getStno()) > 0) {
				area[j] = area[j - 1];
				j--;
			}
			area[j] = area[i];
		}
		return area;
	}
	
	public static Area[] sortByTemperature(Area[] area) {
		for (int i = 1; i < area.length; i++) {
			int j = i;
			while (j > 0 && area[j - 1].getTemperature()>area[i].getTemperature()) {
				area[j] = area[j - 1];
				j--;
			}
			area[j] = area[i];
		}
		return area;
	}
	
	public static Area[] sortByColor(Area[] area) {
		for (int i = 1; i < area.length; i++) {
			int j = i;
			while (j > 0 && area[j - 1].getColor().compareTo(area[i].getColor()) > 0) {
				area[j] = area[j - 1];
				j--;
			}
			area[j] = area[i];
		}
		return area;
	}

}
